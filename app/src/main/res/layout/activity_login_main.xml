<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.fragmenttofagment.LoginActivity"
    android:background="#1a1c27">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="26dp"
        android:layout_height="35dp"
        android:background="@drawable/previous_icon"
        android:id="@+id/btn_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/btn_cancel"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:id="@+id/btn_facebook"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/facebook_button" />

    <Button
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:id="@+id/btn_google"
        android:layout_below="@+id/btn_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/google_button" />

    <Button
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_google"
        android:id="@+id/btn_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/email" />

    <ImageView
        android:layout_width="304dp"
        android:layout_height="29dp"
        android:id="@+id/image_line"
        android:layout_below="@+id/btn_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/or"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="322dp"
        android:layout_height="59dp"
        android:background="@drawable/login_button"
        android:layout_below="@+id/image_line"
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
